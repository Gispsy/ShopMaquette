{% extends 'base.html.twig' %}

{% block title %}ShopMaquette - Facture
{% endblock %}

{% block body %}
	<h1 class="p-4">Facture
	</h1>

	<div class="container-fluid mt-5">
		<div class="row">
			<h3>Facture numero :
				{{ facture.id }}</h3>
			<p>Commande numéro :
				{{ commande.reference }}</p>
			<p>Prenom client :
				{{ commande.client.prenom }}</p>
			<p>Nom client :
				{{ commande.client.nom }}</p>
			<p>Adresse facturation :
				{{ commande.adresseFacturation }}</p>
			<p>Adresse livraison :
				{{ commande.adresseLivraison }}</p>

			<table class="table col-6 w-50 mx-5 text-center">
				<thead>
					<th>Nom</th>
					<th>Prix</th>
					<th>Quantité</th>
					<th>Total</th>

				</thead>
				<tbody>
					{% for produit in commande.produit %}
						<tr class="border">
							<td>{{ produit.nom }}</td>
							<td>{{ produit.prixPHUT }} €</td>
						{% endfor %}
						<td>{{ commande.quantiter }}</td>
						<td>{{ commande.total }} €</td>
					</tbody>
				</tbody>
			</table>
			<div class="border text-center" >
			<p class="mt-3">Frais de livraison de 5€</p>
			<p class="mt-2">
				Montant de la commande passer :
				{{ commande.total }}€
			</p>
			<p>
				Merci d'avoir passer votre commande chez ShopMaquette !
			</p>
			</div>
		</div>
		<a href="{{ path('app_commandUser') }}" class="btn btn-primary m-5">
			Retour
		</a>
	</div>
{% endblock %}

