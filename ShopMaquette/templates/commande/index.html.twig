{% extends 'base.html.twig' %}

{% block title %}ShopMaquette - Resumer Commande
{% endblock %}

{% block body %}
	{# Recap du panier  #}
	<h1 class="mt-3 mx-3 border-bottom">Recap Commande</h1>


			{{ form_start(Commande) }}

		<div class="container-fluid mt-5">
			<div class="row">
				<table class="table col-6 w-50 mx-5 text-center">
					<thead>
						<th>Nom</th>
						<th>Quantité</th>
						<th>Prix</th>
						<th>Total</th>

					</thead>
					<tbody>
						{% for element in dataPanier %}

							<tr class="border-bottom-black">
								<td>{{ element.produit.nom }}</td>
								<td>
									{{ element.quantite }}
								</td>
								<td>
									{{ element.produit.prixPHUT }}
									€
								</td>
								<td>
									{{ element.produit.prixPHUT * element.quantite + 5 }}
									€
								</td>
							</tr>

						{% endfor %}
					</tbody>
				</table>
			</div>
			<input class="mx-5 mt-3" alt="vente" type="checkbox">Accepter les
				<a href="#">termes de vente</a>
			</input>
			<input class="mx-5 mt-3" type="checkbox" alt="general">Accepter les
				<a href="#">conditions général</a>
			</input>

			{# Choix des adresses de payement et de livraison #}
			{{ form_row(Commande.adresseF) }}
			{{ form_row(Commande.adresseL) }}

		</div>
		<div class="row">
			<h2 class="mt-3 mx-3 border-bottom">Moyen de payement</h2>

			<input type="checkbox" name="paypal" id="paypal">

				<img src="ImageCommand/paypal.png" class="w-25" alt="paypal"></img>
			</input>

	<button class="btn btn-primary" type="submit">Confirmer la commande</button>
			{{ form_end(Commande) }}

</div></div>{% endblock %}

