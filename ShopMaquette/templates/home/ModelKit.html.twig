{% extends 'base.html.twig' %}

{% block title %}ShopMaquette - Model-Kit
{% endblock %}

{% block body %}

    <div class="container-fluid text-start mt-5">

        <div class="row mx-auto my-auto justify-content-center">

            <div class="card-group offset-md-0 offset-1 col-12 col-md-10">
                {% for categorie in categories %}
                        <div class="card col-md-3 me-5">

                            <a href="#">
                                <img src="{{ asset('images/categorie/' ~ categorie.image) }}" class="card-img img-fluid">
                            </a>
                        </div>
                {% endfor %}

            </div>
        </div>
    </div>
{% endblock %}