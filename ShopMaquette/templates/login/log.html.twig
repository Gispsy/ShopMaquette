{% extends 'base.html.twig' %}

{% block title %}ShopMaquette - Login{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    
    {% endif %}

    <div class ="mt-5">

        <div class="container-fluid col-md-12 shadow-lg p-3 mb-5 bg-body rounded w-25">

            <h1 class=" fs-1 text-center p-3 col-md-12"> Connection </h1>

                <form class="col-md-12" action ="{{ path('app_login') }}" method="post">
                    <label class="form-label" for="username">Email:</label>
                    <input class="form-control" type="text" id="username" name="_username" value"{{ last_username }}">

                    <label class="form-label mt-4" for="password">Password:</label>
                    <input class="form-control" type="password" id="password" name="_password">

                    <button class="btn btn-primary mt-4 mb-2 w-100" type="submit">connection</button>

                    <a class="mt-2" href="{{ path('app_register') }}">Cr√©er un compte</a>

                </form>
            </div>
    </div>
    
{% endblock %}
