{% extends 'base.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}
    <h1>Categorie index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Image</th>
                <th>UpdateAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>

                <td>{{ categorie.nom }}</td>

                <td>
                    {{ categorie.image }}
    {# TEST INTEGRER LIMAGE DANS INDEX <img src="{{ vich_uploader_asset(categorie, "imageFile") }}"> #}
                </td>

                <td>{{ categorie.updateAt ? categorie.updateAt|date('Y-m-d') : '' }}</td>
                
                <td>
                    <a class="btn btn-primary" href="{{ path('categorie_show', {'id': categorie.id}) }}">Voir</a>
                    <a class="btn btn-primary" href="{{ path('categorie_edit', {'id': categorie.id}) }}">Modifier</a>
                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary mx-2" href="{{ path('categorie_new') }}">Nouveau</a>
{% endblock %}
