{% extends 'base.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
    <h1>Categorie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ categorie.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ categorie.nom }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ categorie.image }}</td>
            <tr>
                <th>UpdateAt</th>
                <td>{{ categorie.updateAt ? categorie.updateAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('categorie_index') }}">Retour</a>

    <a class="btn btn-primary mx-4" href="{{ path('categorie_edit', {'id': categorie.id}) }}">Modifier</a>

    {{ include('pages/categorie/_delete_form.html.twig') }}
{% endblock %}
