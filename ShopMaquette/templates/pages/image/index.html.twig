{% extends 'base.html.twig' %}

{% block title %}Index - Images{% endblock %}

{% block body %}
    <h1>Accueil - Image Produit</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Liens</th>
                <th>UpdateAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for image in images %}
            <tr>
                <td>{{ image.id }}</td>
                <td>{{ image.nom }}</td>
                <td>{{ image.updateAt ? image.updateAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_image_show', {'id': image.id}) }}">show</a>
                    <a href="{{ path('app_image_edit', {'id': image.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_image_new') }}">Creer un Image de Porduit</a>
{% endblock %}
