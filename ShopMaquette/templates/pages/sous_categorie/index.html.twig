{% extends 'base.html.twig' %}

{% block title %}ShopMaquette - SousCategorie{% endblock %}

{% block body %}
    <h1>SousCategorie - Accueil</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Image</th>
                <th>UpdateAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sous_categorie in sous_categories %}
            <tr>
                <td>{{ sous_categorie.id }}</td>
                <td>{{ sous_categorie.nom }}</td>
                <td>{{ sous_categorie.image }}</td>
                <td>{{ sous_categorie.updateAt ? sous_categorie.updateAt|date('Y-m-d') : '' }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('sous_categorie_show', {'id': sous_categorie.id}) }}">show</a>
                    <a class="btn btn-primary" href="{{ path('sous_categorie_edit', {'id': sous_categorie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('sous_categorie_new') }}">Create new</a>
{% endblock %}
