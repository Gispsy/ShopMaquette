{% extends 'base.html.twig' %}

{% block title %}Fournisseur{% endblock %}

{% block body %}
<div class="container">
    <h1 class="mt-4">{{ fournisseur.nom }}</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ fournisseur.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ fournisseur.nom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ fournisseur.adresse }}</td>
            </tr>
            <tr>
                <th>Cp</th>
                <td>{{ fournisseur.cp }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ fournisseur.pays }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ fournisseur.ville }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary mt-4" href="{{ path('fournisseur_index') }}">Retour</a>

    <a class="btn btn-primary mt-4 mx-4" href="{{ path('fournisseur_edit', {'id': fournisseur.id}) }}">Modifier</a>

    {{ include('pages/fournisseur/_delete_form.html.twig') }}
</div>
{% endblock %}
