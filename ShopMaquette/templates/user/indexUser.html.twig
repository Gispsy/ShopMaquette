{% extends 'base.html.twig' %}

{% block title %}ShopMaquette - Profil{% endblock %}

{% block body %}

{% if app.user and is_granted('ROLE_USER') %}

{# Container du titre avec liste #}
<div class="container-fluid col-12 mt-3">
    <div class="row">
        <div class="col-2">
            <h1 class="mt-3 mx-3">Profil</h1>

        {# Liste pour naviger dans le profil #}
            <ul class="mt-5">
                <a href="{{ path('app_user') }}">
                    <li class="profilslist navbar">Details profil</li>
                </a>
                <a href="{{ path('app_commandUser') }}">
                    <li class="profilslist navbar">Mes commandes</li>
                </a>
                <a href="#">
                    <li class="profilslist navbar">Options de profil</li>
                </a>
                <a href="{{ path('app_logout') }}">
                    <li class="profilslist navbar">Deconnexion</li>
                </a>
            
            </ul>
        </div>

        {# Container du formulaire #}
        <div class="container-fluid col-10">
            <h1>Details Compte</h1>
            <h5 class='mt-5'>Information personnels</h5>
            <div class="border-bottom mt-4"></div>

            <div class="row">
                <div class="col-5">
                    {{ form_start(Profil) }}
                    {{ form_row(Profil.nom) }}
                    {{ form_row(Profil.pays) }}
                </div>
                <div class="col-5">

                    {{ form_row(Profil.prenom) }}
                    {{ form_row(Profil.ville) }}
                </div>

                    {{ form_row(Profil.adresse) }}
                    {{ form_row(Profil.codepostal) }}
                    {{ form_row(Profil.numero) }}

                <h5 class='mt-5'>Adresse mail</h5>
                <div class="border-bottom mt-4"></div>

                    {{ form_row(Profil.email) }}

                <button type="submit" class="btn btn-primary mt-4 w-100">Enregistrer</button>
                {{ form_end(Profil) }}
            
        </div>
    {% else %}

    <p> Your are admin return</p>

    {% endif %}
    </div>
</div>
{% endblock %}
