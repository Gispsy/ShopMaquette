{% extends 'base.html.twig' %}

{% block title %}ShopMaquette - Details commande
{% endblock %}

{% block body %}

	{# Container du titre avec liste #}
	<div class="container-fluid col-12 mt-3">
		<div class="row">
			<div class="col-2">
				<h1 class="mt-3 mx-3">Profil</h1>

				{# Liste pour naviger dans le profil #}
				<ul class="mt-5">
					<a href="{{ path('app_user') }}">
						<li class="profilslist navbar">Details profil</li>
					</a>
					<a href="{{ path('app_commandUser') }}">
						<li class="profilslist navbar">Mes commandes</li>
					</a>
					<a href="#">
						<li class="profilslist navbar">Options de profil</li>
					</a>
					<a href="{{ path('app_logout') }}">
						<li class="profilslist navbar">Deconnexion</li>
					</a>

				</ul>
			</div>
		</div>
	</div>

	{# Container de details de la command #}
	<div class="container-fluid col-12 mt-5">
		<div class="row d-flex justify-content-end">
			<div class="card col-10">
				<h2 class="mt-3">Facture</h2>
				<div class="card-body mt-3">
					<h5>
						Commande
						{{ commande.reference }}
					</h5>
					<div class="mt-2">
						Adresse de livraison :
						{{ commande.adresseLivraison }}
					</div>
					<div class="mt-2">
						Adresse de facturation :
						{{ commande.adresseFacturation }}
					</div>
					<div class="mt-2">
						Moyen de payement :
						{{ commande.payement }}
					</div>
					<div class="mt-2">
						Nom client :
						{{ commande.client.nom }}
					</div>
					<div class="mt-2">
						Prenom client :
						{{ commande.client.prenom }}
					</div>
					<table class="mt-5 col-10">
						<thead class="border">
							<tr>
								<th>Nom porduit</th>
								<th>prix porduit</th>
								<th>Quantiter porduit</th>

							</tr>
						</thead>
						<tbody>
							{% for produit in commande.produit %}
								<tr class="border">
									<td>{{ produit.nom }}</td>
									<td>{{ produit.prixPHUT }}</td>
								{% endfor %}
								<td>{{ commande.quantiter }}</td>
							</tr>
						</tbody>
					</table>
				

					<table>
						<tbody>
						{#  Ajout d'une condition si la commande depasse 100€ #}
							<p class="mt-3">Frais de livraison de 5€</p>
							<p class="mt-2">
								Montant de la commande passer : {{ commande.total }}€
							</p>
							<p> Merci d'avoir passer votre commande chez ShopMaquette ! </p>
						</tbody>

					</table>
				</div>

			</div>
		</div>
	</div>

{% endblock %}

